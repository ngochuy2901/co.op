<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="10"
    android:layout_height="200sp">
    <ImageView
        android:src="@drawable/img_logo_coop"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/promotion_title"
            android:text="Giá sốc giảm tận gốc"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/promotion_date"
            android:textColor="#000000"
            android:text="Đến 12/06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/promotion_description"
            android:textColor="#000000"
            android:text="Ưu đãi giảm sốc mua ngay kẻo lỡ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>